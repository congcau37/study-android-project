<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnShowFragmentA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="displayFragment"
            android:text="@string/btn_show_fragment_a" />

        <Button
            android:id="@+id/btnShowFragmentB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="displayFragment"
            android:text="@string/btn_show_fragment_b" />

        <Button
            android:id="@+id/btnShowFragmentC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="displayFragment"
            android:text="@string/btn_show_fragment_c" />
    </LinearLayout>
</RelativeLayout>
